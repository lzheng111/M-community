.header{
  position: relative;
  margin-bottom: 40rpx;
  margin-top: 30rpx;
}
.header-input{
  height: 62rpx;
 line-height: 62rpx;
 padding:  0 36rpx;
 margin: 22rpx 36rpx 14rpx 36rpx;
 border: 1rpx solid #D9DDE1;
 border-radius: 36rpx;
 text-align: center;
 box-shadow: 0 0 12rpx 0 rgba(193, 193, 193, 0.40);
 background-color: white;
 font-size: 28rpx;

}
.header-input-placeholder{
 color: rgba(133, 133, 133, 0.60);
 font-size:28rpx;
}
.header-input-icon{
 position: absolute;
 left: 50%;
 top: 18rpx;
 transform: translate(-184rpx);
 color:white;
}

.project-empty{
  font-size: 50rpx;
  text-align: center;
  margin-top: 100rpx;
}



.notice-item{
  height: 110rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid 	#F0F0F0;
}
.item-pic{
  flex: 1;
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #66B3FF;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-main{
  flex: 6;
  margin-left:25rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}
/* .item-main p{
  font-size: 20rpx;
} */
.item-headline{
  padding-top: 4rpx;
  font-size: 31rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: normal!important;
  word-wrap: break-word;
}
.item-content{
  font-size: 28rpx;
  color: 	#ADADAD;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: normal!important;
  word-wrap: break-word;
}
.item-time{
  flex: 1.5;
  display: flex;
  height: 100%;
  justify-content:flex-end;
  padding-right: 20rpx;
}
.item-time p{
  padding-top: 20rpx;
  font-size: 22rpx;
  color: 	#d0d0d0;
}